<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PhoneChecking">

    <TextView
        android:padding="20dp"
        android:text="Vui lòng nhập số điện thoại để kiểm tra khách đã đăng ký tài khoản này hay chưa?"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/phone_checking"
            android:hint="Nhập số điện thoại"
            android:textSize="@dimen/body_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_margin="20dp"
        android:id="@+id/btn_phonechecking"
        android:layout_marginTop="20dp"
        android:text="Kiếm tra"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>