<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"

    tools:context=".Activity.SignIn">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rotate"
            android:layout_centerInParent="true"
            android:background="@drawable/rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="6"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/white_border_top"
            android:id="@+id/username_login"
            android:padding="10dp"
            android:textSize="@dimen/body_text_size"
            android:hint="Email hoặc số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <EditText
            android:inputType="textPassword"
            android:background="@drawable/white_border_bottom"
            android:id="@+id/password_login"
            android:padding="10dp"
            android:textSize="@dimen/body_text_size"
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_login"
            android:background="@drawable/rectangle_gradient"
            android:textSize="@dimen/body_text_size"
            android:text="Đăng nhập"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="@color/colorPrimary"-->
            <!--android:id="@+id/forgetpassword_login"-->
            <!--android:padding="5dp"-->
            <!--android:textSize="@dimen/body_text_size"-->
            <!--android:text="Quên Mật khẩu?"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

    </LinearLayout>



    <RelativeLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:background="@color/darkGrey"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="1dp"></View>

            <TextView
                android:text="Hoặc"
                android:textSize="@dimen/body_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/darkGrey"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="1dp"></View>
        </LinearLayout>


        <TextView
            android:layout_marginBottom="10dp"
          android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/forgetpassword_login"
            android:padding="5dp"
            android:background="@drawable/primary_border"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/body_text_size"
            android:text="Quên mật khẩu?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>